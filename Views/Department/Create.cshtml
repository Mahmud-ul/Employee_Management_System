@model Employee_Management_System.Models.Department
@{
    ViewData["Title"] = "Create";
}

<h4>Add Department</h4>

<hr />
<div class="row">
    <div class="col-md-12">
        <form id="myForm" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row mb-3">
                <label asp-for="Name" class="col-md-2 col-form-label">Department Name</label>
                <div class="col-md-6">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            @* <div class="row mb-3">
                <label asp-for="Name" class="col-md-2 col-form-label">Employee</label>
                <div class="col-md-6">
                    <select id="EmployeeID" asp-for="EmployeeID" class="form-control">
                        <option value="">--Select Employee--</option>
                        @foreach (var i in ViewBag.Employee)
                        {
                            <option value="@i.ID">@i.Name</option>
                        }
                    </select>
                    <span asp-validation-for="EmployeeID" class="text-danger"></span>
                </div>
            </div> *@

            <div class="row mb-3">
                <label asp-for="Budget" class="col-md-2 col-form-label">Budget</label>
                <div class="col-md-6">
                    <input asp-for="Budget" class="form-control" />
                    <span asp-validation-for="Budget" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-2"></div>
                <div class="col-md-6">
                    <input class="form-check-input" asp-for="Status" />
                    @Html.DisplayNameFor(model => model.Status)
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-2"></div>
                <div class="col-md-6">
                    <input type="submit" value="Create" class="btn btn-outline-success" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#myForm").submit(function (e) {
            debugger;
            if (!$("#myForm").valid()) {
                e.preventDefault();
            }
        });
    });
</script>

