@using Newtonsoft.Json
@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "GetAvgPerformanceScorePerDepartment";
}

@{
    var results = TempData["result"] != null ?
    JsonConvert.DeserializeObject<IEnumerable<dynamic>>(TempData["result"]?.ToString() ?? string.Empty) : new List<dynamic>();
}

<h4>Average Performance Score Per Department</h4>
<hr />

<p>
    <a class="btn btn-outline-secondary" asp-action="Index">Performance Score List</a>
</p>

<table id="example" class="table table-striped" style="width:70%;">
    <thead>
        <tr>
            <th>Department</th>
            <th>Avg. Score</th>
        </tr>
    </thead>
    <tbody>
        @if (results?.Any() == true)
        {
            @foreach (var i in results)
            {
                <tr>
                    <td>@i.DepartmentName</td>
                    <td>@i.AvgPerformanceScore.ToString("F2")</td>
                </tr>
            }
        }       
    </tbody>
</table>
